---
import slateConfig from '~@/slate.config';

interface Props {
  avatar?: string;
}

const { avatar = slateConfig.avatar } = Astro.props;
---

<header>
  <div class="mb-9 flex items-start justify-between">
    <div class="h-14 w-14 whitespace-nowrap text-[0px]">
      <img
        class="block h-full w-full rounded-full border-2 border-white bg-slate2 shadow-xs outline-1 outline-slate3"
        src={avatar}
        alt={slateConfig.title}
        draggable="false"
      />
      <span>{slateConfig.title}</span>
    </div>
    <div class="flex items-center gap-2">
      <a
        href={slateConfig.cv}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-md bg-slate3 px-4 py-2 text-sm font-medium text-slate12 transition-colors hover:bg-slate4"
      >
        CV
      </a>
      <a
        href={slateConfig.rirekisyo}
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-md bg-slate3 px-4 py-2 text-sm font-medium text-slate12 transition-colors hover:bg-slate4"
      >
        履歴書
      </a>
    </div>
  </div>
</header>
